<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/app_black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/app_black"
        >
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/back_white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goods_info"
            android:gravity="center_vertical"
            style="@style/text_while14"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/tv_house"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_toLeftOf="@+id/tv_share"
            />
        <ImageView
            android:id="@+id/tv_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/share"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.lzy.widget.VerticalSlide
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">
                <com.lzy.widget.vertical.VerticalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true"
                    android:fillViewport="true"
                    android:background="@color/white"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.youth.banner.Banner
                            android:id="@+id/banner"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            app:indicator_drawable_selected="@color/white"
                            app:indicator_drawable_unselected="@color/gray"
                            app:indicator_height="4dp"
                            app:indicator_margin="4dp"
                            app:indicator_width="15dp"
                            />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="@color/edit_phone"
                            android:textSize="15sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center_vertical"
                            >
                            <TextView
                                android:id="@+id/tv_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/app_news_price"
                                android:textSize="21sp"
                                />
                            <TextView
                                android:id="@+id/tv_old_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:textSize="15sp"
                                android:textColor="@color/edit_phone"
                                android:alpha="0.5"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="上海"
                                android:textSize="13sp"
                                android:textColor="@color/edit_phone"
                                android:alpha="0.5"
                                android:layout_marginRight="10dp"
                                />
                            <TextView
                                android:id="@+id/tv_num"
                                android:layout_width="wrap_content"
                                android:layout_height="16dp"
                                android:background="@color/black"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/home_bg_color"/>
                        <TextView
                            android:id="@+id/tv_spec"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="商品规格"
                            android:drawableLeft="@drawable/ge"
                            android:drawablePadding="15dp"
                            android:drawableRight="@drawable/next"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/edit_phone"
                            />
                        <include layout="@layout/view_liner_h"/>
                        <TextView
                            android:id="@+id/tv_parameter"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="产品参数"
                            android:gravity="center_vertical"
                            android:drawableLeft="@drawable/cs"
                            android:drawablePadding="15dp"
                            android:drawableRight="@drawable/next"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/edit_phone"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@color/home_bg_color"/>
                        <GridView
                            android:id="@+id/grid_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:numColumns="4"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            />
                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:background="#F4F5F7"
                            >
                            <View
                                android:layout_width="70dp"
                                android:layout_height="1px"
                                android:background="#B2ADAF"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="继续拖动，查看图文详情"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:textColor="@color/edit_phone"
                                android:textSize="10sp"
                                />
                            <View
                                android:layout_width="70dp"
                                android:layout_height="1px"
                                android:background="#B2ADAF"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </com.lzy.widget.vertical.VerticalScrollView>
                <com.lzy.widget.vertical.VerticalWebView
                    android:id="@+id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    />
            </com.lzy.widget.VerticalSlide>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/liner_color"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/layout_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cart"
                android:layout_centerInParent="true"
                />
            <TextView
                android:id="@+id/tv_cart"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:background="@drawable/red_point"
                android:layout_toRightOf="@+id/cart"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/liner_color"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:id="@+id/layout_im"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kf"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/add_house"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="加入购物车"
            android:gravity="center"
            android:background="@color/app_black"
            style="@style/text_while15"
            />
    </LinearLayout>
</LinearLayout>