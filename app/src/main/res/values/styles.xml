<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- dialog对话框样式-->
    <style name="dialog_transparent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="StartAppTheme" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="text_black15">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="text_black14">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_black13">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="text_black12">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text_Brown13">
        <item name="android:textColor">@color/edit_phone</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="text_Brown12">
        <item name="android:textColor">@color/edit_phone</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text_Brown15">
        <item name="android:textColor">@color/edit_phone</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="text_Brown17">
        <item name="android:textColor">@color/edit_phone</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="text_while15">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="text_while14">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_while13">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="text_while12">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="text_white_16sp">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="mine_options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/next</item>
    </style>

    <style name="options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/share_pop_in</item>
    </style>

    <style name="nav_bottom">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/nav_bottom_text</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <declare-styleable name="RoundImageView">
        <!-- 描边宽度-->
        <attr name="border_width" format="dimension"/>
        <!-- 描边颜色-->
        <attr name="border_color" format="color"/>
        <!--圆角大小-->
        <attr name="corner_radius" format="dimension"/>
        <!--左上圆角大小-->
        <attr name="leftTop_corner_radius" format="dimension"/>
        <!--右上圆角大小-->
        <attr name="rightTop_corner_radius" format="dimension"/>
        <!--左下圆角大小-->
        <attr name="leftBottom_corner_radius" format="dimension"/>
        <!--右下圆角大小-->
        <attr name="rightBottom_corner_radius" format="dimension"/>
        <!--图片类型：圆角或者圆形-->
        <attr name="type" format="enum">
            <enum name="oval" value="2"/>
            <enum name="round" value="1"/>
            <enum name="circle" value="0"/>
        </attr>
    </declare-styleable>
</resources>
